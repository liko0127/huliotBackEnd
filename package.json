{
  "name": "backend-typescript-pern-stack",
  "version": "1.0.0",
  "description": "Backend TypeScript PERN Stack",
  "main": "build/src/index.js",
  "scripts": {
    "dev": "nodemon",
    "build": "tsc -p .",
    "start": "cross-env NODE_ENV=production ts-node -r tsconfig-paths/register ./build/src/index.js",
    "lint": "eslint . --ext .ts",
    "migration:create": "cross-env NODE_ENV=local npm run typeorm -- migration:create -n",
    "setup": "npm run typeorm -- migration:run",
    "setup:local": "cross-env NODE_ENV=local npm run typeorm -- migration:run",
    "typeorm": "ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli.js",
    "format": "prettier --write \"**/*.+(js|jsx|json|yml|yaml|css|md|vue)\"",
    "lint:fix": "eslint --fix . --ext .ts",
    "heroku-postbuild": "npm run build"
  },
  "dependencies": {
    "@hapi/joi": "^17.1.1",
    "axios": "^0.26.0",
    "canvas": "^2.9.0",
    "compression": "1.7.4",
    "copyfiles": "^2.4.1",
    "cors": "2.8.5",
    "cross-env": "^7.0.3",
    "dotenv-safe": "8.2.0",
    "express": "4.17.3",
    "express-fileupload": "^1.3.1",
    "express-joi-validation": "5.0.1",
    "express-promise-router": "4.1.1",
    "form-data": "^4.0.0",
    "http-status": "1.5.0",
    "merge-images": "^2.0.0",
    "mkdirp": "^1.0.4",
    "morgan": "1.10.0",
    "pg": "^8.7.3",
    "ts-node": "10.5.0",
    "tsconfig-paths": "3.12.0",
    "typeorm": "0.2.44",
    "web3": "^1.7.0",
    "winston": "^3.6.0"
  },
  "devDependencies": {
    "@types/compression": "1.7.2",
    "@types/cors": "2.8.12",
    "@types/dotenv-safe": "8.1.2",
    "@types/express": "4.17.13",
    "@types/express-promise-router": "3.0.0",
    "@types/helmet": "0.0.48",
    "@types/http-status": "1.1.2",
    "@types/jest": "27.4.1",
    "@types/logform": "1.10.1",
    "@types/morgan": "1.9.3",
    "@types/node": "17.0.21",
    "@types/supertest": "2.0.11",
    "@typescript-eslint/eslint-plugin": "5.13.0",
    "@typescript-eslint/parser": "5.13.0",
    "eslint": "^8.10.0",
    "eslint-config-prettier": "^8.4.0",
    "eslint-plugin-prettier": "^4.0.0",
    "jest": "27.5.1",
    "logform": "2.4.0",
    "nodemon": "2.0.4",
    "prettier": "^2.5.1",
    "supertest": "6.2.2",
    "ts-jest": "27.1.3",
    "typescript": "4.5.5"
  }
}
